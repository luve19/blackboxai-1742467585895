<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.VertiGrowth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Default text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Default background color -->
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <!-- Common text styles -->
    <style name="TextAppearance.VertiGrowth.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.VertiGrowth.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.VertiGrowth.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.VertiGrowth.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.VertiGrowth.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Progress Bar style -->
    <style name="Widget.VertiGrowth.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:minHeight">4dp</item>
    </style>

    <!-- Error Text style -->
    <style name="TextAppearance.VertiGrowth.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Success Text style -->
    <style name="TextAppearance.VertiGrowth.Success" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/success_green</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>